generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  user_id           Int        @id @default(autoincrement())
  telegram_id       BigInt     @unique
  name              String
  registration_date DateTime   @default(now())
  coins             Int        @default(5000)
  referred_by_id    Int?
  referredBy        Player?    @relation("Referral", fields: [referred_by_id], references: [user_id])
  referrals         Player[]   @relation("Referral")
  character         Character?
}

model Character {
  character_id Int     @id @default(autoincrement())
  user_id      Int     @unique
  user         Player? @relation(references: [user_id], fields: [user_id])
}
